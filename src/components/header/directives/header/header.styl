header.main
  $height = 62px
  background $lgrey
  padding 0 40px
  clearfix()
  height $height
  border-bottom 1px solid $bordergrey

  h1
    float left
    padding 14px 0

  nav
    float right

    ul
      clearfix()

    li
      float left
      border-left 1px solid lighten($mgrey, 20%)

      &:first-child
        border 0 none

    a
      text-decoration none
      display block
      height $height - 2px
      line-height $height - 2px
      border-bottom 2px solid transparent
      vertical-align middle
      padding 0 10px
      color $dgrey
      cursor pointer
      font-size 0.9em
      text-shadow 0 1px 1px rgba($white, 0.8)

    li.is-active a
      border-bottom-color $dgrey
