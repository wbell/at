// Declare variables & mixins
$lgrey = #d8d8d8
$mgrey = #c6c6c6
$dgrey = #5c5c5c
$bordergrey = #979797
$white = #ffffff
$black = #000000
$blue = #4990e2

$inputHeight = 40px

// css reset from nib
global-reset()
reset-html5()

// Set global/shared styles
body
  font-family arial,helvetica,sans-serif

h1
  font-size 2.2em

h2
  font-size 1.3em

h3
  font-size 1.4em
  font-weight 600

header.subheader
  background $mgrey
  padding 20px 50px
  box-shadow 0 1px 2px rgba($black, 0.5)
  clearfix()

main
  padding 20px 50px

select
  border 1px solid $bordergrey
  background linear-gradient(top, #efefef, #d5d5d5)
  border-radius 4px
  font-size 0.95em
  color $dgrey
  min-width 220px
  box-shadow 0 1px 2px rgba($black, 0.3), inset 0 1px 1px rgba($white, 0.9)
  height $inputHeight

input[type=text]
  border 1px solid $bordergrey
  background $white
  border-radius 4px
  font-size 0.95em
  color $dgrey
  min-width 350px
  box-shadow inset 0 1px 2px rgba($black, 0.3)
  height $inputHeight
  padding 0 10px
  vertical-align middle

button
  border 1px solid $bordergrey
  background linear-gradient(top, #d4d4d4, #b4b4b4)
  border-radius 4px
  font-size 0.95em
  font-weight 600
  color $dgrey
  text-shadow 0 1px 0 rgba($white, 0.9)
  min-width 160px
  box-shadow 0 1px 2px rgba($black, 0.3), inset 0 1px 1px rgba($white, 0.9)
  height $inputHeight

  &:active
    background linear-gradient(top, #b4b4b4, #d4d4d4)

// Imports all component styles
@import 'components/**/*'
